@model IEnumerable<Orders>

<div class="container mt-4">
    <h2 class="mb-4">My Orders</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center">
            <h5 class="p-2">You have no orders yet.</h5>
            <a asp-action="Products" asp-controller="Product" class="btn btn-orange">Go Shopping</a>
        </div>
    }
    else
    {
        <div class="p-1 bg-dark rounded">
            <table class="table table-dark  table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Order Number</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.OrderNumber</td>
                            <td>
                                <span class="badge
        @(order.Status == "Completed" ? "badge-success" :
          order.Status == "Processing" ? "badge-warning" :
          order.Status == "Shipped" ? "badge-info" :
          order.Status == "Pending" ? "badge-grey" :
          order.Status == "Cancelled" ? "badge-danger" : "badge-secondary")">
                                    @order.Status
                                </span>
                            </td>

                            <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                            <td>@order.Total.ToString("C")</td>
                            <td>
                                <a asp-action="Details" asp-controller="Product" asp-route-id="@order.Id" class="btn btn-sm btn-orange">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>
