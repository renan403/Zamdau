@model Zamdau.Models.Account
@{
    ViewBag.Title = "My Account";
    var num = (new Random()).Next(1, 5).ToString() + ".jpeg";
}
<form id="profileForm" method="post" asp-action="MyAccount">
    <div class="container profile-container text-black">
        <div class="profile-header">
            <img src="~/images/Profile/Profile_@num" alt="User Image" class="img-fluid gradient-border ">
            <h2 class="mt-3 mb-5">Profile</h2>
        </div>
       
        <div class="profile-info">
            <!-- Nome -->
            <div class="mb-1">
                <div class="d-flex">
                    <label asp-for="Name" class="form-label fw-bolder me-1 py-1 w-25">Name:</label>
                    <input asp-for="Name" class="form-control d-none" autocomplete="off"/>
                    <p id="NameDisplay" class="py-1">@Model.Name</p>
                </div>
                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger fw-bolder" })
            </div>
            <hr />
            <!-- Idade -->
            <div class="mb-1">
                <div class="d-flex">
                    <label asp-for="Age" class="form-label fw-bolder me-1 py-1 w-25">Age:</label>
                    <input asp-for="Age" pattern="^\d+$" class="form-control d-none" autocomplete="off" />
                    <p id="AgeDisplay" class="py-1">@Model.Age</p>
                </div>
                @Html.ValidationMessageFor(model => model.Age, null, new { @class = "text-danger fw-bolder" })
            </div>
            <hr />
            <!-- Gênero -->
            <div class="mb-1">
                <div class="d-flex">
                    <label asp-for="Gender" class="form-label fw-bolder me-1 py-1 w-25">Gender:</label>
                    <select asp-for="Gender" class="form-select d-none">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Others">Others</option>
                    </select>
                    <p id="GenderDisplay" class="py-1">@Model.Gender</p>
                </div>
            </div>
            <hr />
            <!-- Código de País -->
            <div class="mb-1">
                <div class="d-flex">
                    <label asp-for="CountryCode" class="form-label fw-bolder me-1 py-1 w-25">Country Code:</label>
                    <select asp-for="CountryCode" class="form-select d-none">
                        <option value="+55">+55 (Brasil)</option>
                        <option value="+1">+1 (EUA/Canadá)</option>
                        <option value="+44">+44 (Reino Unido)</option>
                    </select>
                    <p id="CountryCodeDisplay" class="py-1">@Model.CountryCode</p>
                </div>
            </div>
            <hr />
            <!-- Email -->
            <div class="mb-1">
                <div class="d-flex">
                    <label asp-for="Email" class="form-label fw-bolder me-1 py-1 w-25">Email:</label>
                    <input asp-for="Email" type="email" class="form-control d-none" />
                    <p id="EmailDisplay" class="py-1">@Model.Email</p>
                </div>
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger fw-bolder" })
            </div>
            <hr />
            <!-- Telefone -->
            <div class="mb-1">
                <div class="d-flex">
                    <label asp-for="Phone" class="form-label fw-bolder me-1 py-1 w-25">Phone:</label>
                    <input asp-for="Phone" type="tel" class="form-control d-none" />
                    <p id="PhoneDisplay" class="py-1">@Model.Phone</p>
                </div>
                @Html.ValidationMessageFor(model => model.Phone, null, new { @class = "text-danger fw-bolder" })
            </div>
        </div>

        <!-- Botões -->
        <div class="edit-button d-flex justify-content-end gap-2">
            <button id="editButton" type="button" class="btn btn-primary">Editar</button>
            <button id="saveButton" type="submit"class="btn btn-success d-none">Salvar</button>
            <button id="cancelButton" type="button" class="btn btn-secondary d-none">Cancelar</button>
        </div>
    </div>

</form>




