<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/images/logoBird.png" sizes="16x16">
    <title>@ViewData["Title"] - Zamdau</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/GlobalCSS.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/testes.css" asp-append-version="true" />
</head>
<body>
        <div class="sidebar">
        <a class="icon" src="" asp-controller="Home" asp-action="Index">
            <img class="logo" src="~/images/logoBird.png" />
            <span class="text">Zamdau</span>
        </a>

        @if (ViewData["token"] == "null")
        {
         
          
            <!--Deslogado-->
            <a asp-action="Products" asp-controller="Product" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-box-seam-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15.528 2.973a.75.75 0 0 1 .472.696v8.662a.75.75 0 0 1-.472.696l-7.25 2.9a.75.75 0 0 1-.557 0l-7.25-2.9A.75.75 0 0 1 0 12.331V3.669a.75.75 0 0 1 .471-.696L7.443.184l.01-.003.268-.108a.75.75 0 0 1 .558 0l.269.108.01.003zM10.404 2 4.25 4.461 1.846 3.5 1 3.839v.4l6.5 2.6v7.922l.5.2.5-.2V6.84l6.5-2.6v-.4l-.846-.339L8 5.961 5.596 5l6.154-2.461z" />
                </svg>
                <span class="text">Products</span>
            </a>
            <a asp-action="Cart" asp-controller="User" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                </svg>
                <span class="text">Cart</span>
            </a>
          
           
            <a asp-action="Login" asp-controller="User" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
                </svg>
                <span class="text">Address</span>
            </a>
            <a asp-action="HelpCenter" asp-controller="Home" class="icon">
                
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-question-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                    <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286m1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94" />
                </svg>
                <span class="text">Help</span>
            </a>
            <div class="signout">
                <a asp-action="Login" asp-controller="User" class="icon ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-fill-up" viewBox="0 0 16 16">
                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.354-5.854 1.5 1.5a.5.5 0 0 1-.708.708L13 11.707V14.5a.5.5 0 0 1-1 0v-2.793l-.646.647a.5.5 0 0 1-.708-.708l1.5-1.5a.5.5 0 0 1 .708 0M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                        <path d="M2 13c0 1 1 1 1 1h5.256A4.5 4.5 0 0 1 8 12.5a4.5 4.5 0 0 1 1.544-3.393Q8.844 9.002 8 9c-5 0-6 3-6 4" />
                    </svg>
                    <span class="text">Sign In</span>
                </a>
                <a asp-action="SignUp" asp-controller="User" class="icon">

                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-fill-add" viewBox="0 0 16 16">
                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0m-2-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                        <path d="M2 13c0 1 1 1 1 1h5.256A4.5 4.5 0 0 1 8 12.5a4.5 4.5 0 0 1 1.544-3.393Q8.844 9.002 8 9c-5 0-6 3-6 4" />
                    </svg>
                    <span class="text">Sign Up</span>
                </a>
            </div>
        }else
        {
            <!-- Logado -->
            <div class="dropend">
                <a href="#" class="icon" data-bs-toggle="dropdown" aria-expanded="true">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-file-person" viewBox="0 0 16 16">
                        <path d="M12 1a1 1 0 0 1 1 1v10.755S12 11 8 11s-5 1.755-5 1.755V2a1 1 0 0 1 1-1zM4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                        <path d="M8 10a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                    </svg>
                    <span class="text text-capitalize text-overflow w-220p">@ViewBag.NameUser</span>
                </a>
                <ul class="dropdown-menu ul-sidebar" tabindex="3">
                    <li><h6 class="dropdown-header">Profile</h6></li>
                    <li><a class="dropdown-item" asp-action="MyAccount" asp-controller="User">My account</a></li>
                    <li><a class="dropdown-item" href="#">My purchases</a></li>
                    <li><a class="dropdown-item" href="#">My coupons</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">More services</a></li>
                </ul>
            </div>


            <a asp-action="Cart" asp-controller="User" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                </svg>
                <span class="text">Cart</span>
            </a>
            <a asp-action="Index" asp-controller="Home" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-box-seam-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15.528 2.973a.75.75 0 0 1 .472.696v8.662a.75.75 0 0 1-.472.696l-7.25 2.9a.75.75 0 0 1-.557 0l-7.25-2.9A.75.75 0 0 1 0 12.331V3.669a.75.75 0 0 1 .471-.696L7.443.184l.01-.003.268-.108a.75.75 0 0 1 .558 0l.269.108.01.003zM10.404 2 4.25 4.461 1.846 3.5 1 3.839v.4l6.5 2.6v7.922l.5.2.5-.2V6.84l6.5-2.6v-.4l-.846-.339L8 5.961 5.596 5l6.154-2.461z" />
                </svg>
                <span class="text">Products</span>
            </a>
            <a asp-action="Address" asp-controller="User" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
                </svg>
                <span class="text">Address</span>
            </a>
            <a href="#" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-question-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                    <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286m1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94" />
                </svg>
                <span class="text">Help</span>
            </a>

            <a href="#" class="icon signout">

                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-box-arrow-in-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0z" />
                    <path fill-rule="evenodd" d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
                </svg>
                <span class="text">Sign Out</span>
            </a>
        }
    </div>

    <div class="content">

        <div class="">
            <main role="main" class="pb-3 ">
                @RenderBody()
            </main>
        </div>
    </div>

    <div class=" position-fixed bottom-0 end-0 mb-1 me-1 bd-mode-toggle">
        <a class="btn py-2 d-flex align-items-center"
           id="bd-theme"
           data-bs-toggle="dropdown"
           aria-label="Toggle theme (auto)">
            <svg class="bi my-1 theme-icon-active" width="1.5em" height="1.5em"><use href="#circle-half"></use></svg>
        </a>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/JSTest.js" asp-append-version="true"></script>
    <script src="~/js/JSCart.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="github" viewBox="0 0 50 50">
            <path d="M32.9 50q-1.7 0-1.7-1.5V42c0-2.3-.8-3.8-1.7-4.6 5.6-.6 11.4-2.7 11.4-12.3 0-2.7-1-4.9-2.6-6.7.3-.6 1.1-3.2-.2-6.6 0 0-2.1-.7-6.8 2.6-2-.6-4.1-.8-6.2-.8-2.1 0-4.3.3-6.2.8-4.8-3.2-6.9-2.6-6.9-2.6-1.4 3.4-.5 6-.2 6.6-1.6 1.7-2.6 4-2.6 6.7 0 9.6 5.8 11.7 11.4 12.3-.7.6-1.4 1.7-1.6 3.3-1.4.6-5 1.7-7.3-2.1 0 0-1.3-2.4-3.8-2.6 0 0-2.4 0-.2 1.5 0 0 1.6.8 2.8 3.6 0 0 1.5 4.4 8.4 2.9v4.5q0 1.5-1.7 1.5z" /><path class="octoholes" d="M9.5 37.2c-.1.1-.2.2-.4.1s-.3-.3-.2-.4c.1-.1.2-.2.4-.1s.3.2.2.4zm-.3-.3M10.6 38.3c-.1.1-.4.1-.5-.1-.2-.2-.2-.4-.1-.5.1-.1.3-.1.5.1.1.2.2.4.1.5zm-.3-.3M11.5 39.7c-.2.1-.4 0-.6-.2-.2-.2-.2-.5 0-.6.2-.1.4 0 .6.2.2.3.2.5 0 .6zm0 0M12.9 41.1c-.1.2-.4.1-.6-.1-.2-.2-.3-.5-.1-.6.1-.2.4-.1.6.1.2.2.2.5.1.6zm0 0M14.7 41.9c-.1.2-.3.3-.6.2-.3-.1-.5-.3-.4-.5.1-.2.3-.3.6-.2.3.1.5.3.4.5zm0 0M16.8 42.1c0 .2-.2.4-.5.4s-.5-.2-.5-.4.2-.4.5-.4c.2 0 .5.2.5.4zm0 0M18.7 41.7c0 .2-.2.4-.5.5-.3.1-.6-.1-.6-.3 0-.2.2-.4.5-.5.3 0 .5.1.6.3zm0 0" />
        </symbol>
    </svg>
</body>
</html>
