<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    <header class="">
        <nav class=" navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div>
                        <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">
                            <img style="width:50px" src="~/images/logoBird.png" />
                        </a>
                    </div>       
                    <div class="">
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                @Html.ActionLink("Sign Up", "SignUp", "User", null, new { @class = "nav-link text-light" })
                            </li>
                            <li class="nav-item ">
                                @Html.ActionLink("Sign In", "Login", "User",null,new { @class = "nav-link text-light" })
                                
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container content">
        <main role="main" class="pb-3 ">
            @RenderBody()
        </main>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" class="d-none">

